{
  "testConfiguration": {
    "version": "1.0",
    "description": "Configuration file for Archive Creation Flow Tests",
    "lastUpdated": "2024-12-19"
  },
  "testParameters": {
    "timeouts": {
      "archiveCreationTimeoutMs": 30000,
      "encryptionValidationTimeoutMs": 10000,
      "ffiOperationTimeoutMs": 5000,
      "fileOperationTimeoutMs": 15000
    },
    "performance": {
      "maxArchiveCreationTimeMs": 30000,
      "maxMemoryUsageMB": 50,
      "largeArchiveCredentialCount": 50,
      "concurrentOperationCount": 3
    },
    "validation": {
      "enableEncryptionValidation": true,
      "enablePerformanceMonitoring": true,
      "enableMemoryLeakDetection": true,
      "strictModeEnabled": false
    }
  },
