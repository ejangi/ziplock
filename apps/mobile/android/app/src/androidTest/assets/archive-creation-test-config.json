  "errorScenarios": {
    "invalidDestinations": [
      "invalid://path/to/nowhere",
      "file:///nonexistent/path/test.7z",
      "content://invalid/uri/path"
    ],
    "problematicArchiveNames": [
      "",
      "a",
      "toolongarchivename".repeat(50) + ".7z",
      "archive\nwith\nnewlines.7z",
      "archive with spaces and special chars @#$%.7z"
    ],
    "edgeCasePasswords": [
      "",
      " ",
      "\n\t\r",
      "a".repeat(1000),
      "üîíüóùÔ∏èüõ°Ô∏èüîê",
      "Mixed\nLine\nBreaks\nPass"
    ]
  },
  "fieldTypeMapping": {
    "password": ["password", "pass", "pwd", "secret", "key", "token"],
    "email": ["email", "e-mail", "mail"],
    "url": ["url", "website", "site", "link"],
    "phone": ["phone", "telephone", "mobile", "cell"],
    "number": ["number", "num", "account", "routing"],
    "text": ["notes", "description", "comment", "title", "name"]
  },
  "sensitiveFields": [
    "password",
    "secret",
    "key",
    "token",
    "api_key",
    "ssh_key",
    "totp_secret",
    "account_number",
    "routing_number",
    "pin",
    "ssn",
    "credit_card"
  ],
  "archiveFormatValidation": {
    "requiredFiles": [
      "metadata.yml"
    ],
    "requiredMetadataFields": [
      "version",
      "format",
      "created_at",
      "last_modified",
      "credential_count",
      "structure_version",
      "generator"
    ],
    "credentialFilePattern": "^credentials/[a-f0-9-]+/record\\.yml$",
    "attachmentFilePattern": "^credentials/[a-f0-9-]+/attachments/.+$"
  },
  "encryptionValidation": {
    "supportedAlgorithms": ["AES-256"],
    "compressionFormats": ["LZMA2"],
    "archiveFormat": "7z",
    "testDecryptionAttempts": 3,
    "wrongPasswordSamples": [
      "wrongpassword",
      "incorrect123",
      "badpass456"
    ]
  },
  "memoryManagement": {
    "maxHeapSizeMB": 128,
    "gcTriggerThresholdMB": 50,
    "memoryLeakDetectionCycles": 5,
    "cleanupDelayMs": 100
  },
  "concurrencyTesting": {
    "maxConcurrentOperations": 5,
    "operationTimeoutMs": 45000,
    "retryAttempts": 2,
    "backoffDelayMs": 1000
  },
  "platformCompatibility": {
    "targetAndroidVersions": [21, 23, 26, 28, 30, 31, 33, 34],
    "architectures": ["arm64-v8a", "armeabi-v7a", "x86", "x86_64"],
    "crossPlatformValidation": {
      "linuxCompatible": true,
      "windowsCompatible": true,
      "macosCompatible": true
    }
  },
  "debugging": {
    "enableVerboseLogging": false,
    "logFFICalls": false,
    "logFileOperations": false,
    "logMemoryUsage": false,
    "saveIntermediateFiles": false,
    "debugOutputDirectory": "/sdcard/Android/data/com.ziplock/cache/debug"
  }
}
