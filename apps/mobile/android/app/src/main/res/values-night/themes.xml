<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme Configuration -->
    <style name="Theme.ZipLock" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/logo_purple_light</item>
        <item name="colorPrimaryDark">@color/logo_purple_dark</item>
        <item name="colorAccent">@color/logo_purple</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>

    <!-- Splash Screen Dark Theme -->
    <style name="Theme.ZipLock.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ziplock_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ZipLock</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>
